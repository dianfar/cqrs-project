@model MyApp.Application.ViewModels.ClientViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/Client/Edit" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input name="Name" class="form-control" value="@Model.Name" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input name="Description" class="form-control" value="@Model.Description" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                <a href="/Client/Index" class="btn btn-info">Back to List</a>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
        </div>
    </div>
</form>
