@model MyApp.Application.ViewModels.ProjectViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/Product/Edit" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input name="Name" class="form-control" value="@Model.Name" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
                <input name="Quantity" class="form-control" value="@Model.Description" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-success" />
                <a href="/Product/Index" class="btn btn-info">Back to List</a>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
        </div>
    </div>
</form>