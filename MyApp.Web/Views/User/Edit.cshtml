@model MyApp.Application.ViewModels.UserViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/User/Edit" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input name="Name" class="form-control" value="@Model.Name" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Email</label>
            <div class="col-md-10">
                <input name="Email" class="form-control" value="@Model.Email" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                <a href="/User/Index" class="btn btn-info">Back to List</a>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
        </div>
    </div>
</form>